<form action="/game_players/new" method="post">
  <% @number.times do %>
  <div>
    <label for="name">Name</label>
    <input id="name" type="text" name="player[name][]">
    <label for="email">E-Mail</label>
    <input id="email" type="text" name="player[email][]" >
  </div>
  <%end%>
  <input type="hidden" name="game[id]" value="<%= @game_id %>">
  <input type="submit" value="Enter Players">
</form>
