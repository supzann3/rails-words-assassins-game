<div class = 'header clearfix'>
    <div class = 'logo_image'>
      <%= image_tag "logo.jpg" %>
    </div>
  </div>

<div class="content clearfix">

<% @game.players.sort.each do |player| %>
  <!-- <div class='player_wrapper clearfix'> -->
    <div class='player_status_container clearfix'>
      <div class='player_name'>
        <%= player.name %>
      </div>
      <div class='ninja picture'>
        <% if player.alive? %>
          <div class = 'ninja'>
            <%= image_tag "alive.png" %>
          </div>
        <% else %>
        <div class = 'ninja'>
          <%= image_tag "dead.png" %>
        </div>
        <% end %>
      </div>
      <div class="status_bar clearfix">
        <div class ='player_status'>
          <%= player.alive? ? "ALIVE" : "DEAD" %>
        </div>
        <div class ='player_kills'>
          <%= player.kills %> KILLS
        </div>
      </div>
      <% if player.alive? %>
      <div class ='kill_button_wrapper'>
        <form action="/players/delete" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" name="player[id]" value="<%= player.id %>">
          <input type="hidden" name="game[id]" value="<%= @game.id %>">
          <input class ='kill_button_wrapper' type="submit" value="KILL ME">
        </form>
      </div>
      <% else %>
      <div class ='dead_button_wrapper'>
        I'M ALREADY DEAD
      </div>
      <% end %>
    </div>
  <!-- </div> -->
<% end %>

</div>
